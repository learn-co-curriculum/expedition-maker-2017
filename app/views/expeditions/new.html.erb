<h2>New Expedition Form</h2>

<form action="/expeditions" method="POST">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <div>
        <label for="expedition_name">Name</label>
        <div>
            <input type="text" name="expedition[name]" value="<%= @expedition.name %>" placeholder="Name" />
        </div>
    </div>
    <div>
        <label for="expedition_description">Description</label>
        <div>
            <textarea name="expedition[description]" placeholder="Description"><%= @expedition.description %></textarea>
        </div>
    </div>
    <div>
        <label for="expedition_length">Length</label>
        <div>
            <input type="number" placeholder="1.55" step="0.01" name="expedition[length]" value="<%= @expedition.length %>" />
        </div>
    </div>
    <div>
        <label for="expedition_difficulty">Difficulty</label>
        <div>
            <input name="expedition[difficulty]" placeholder="Easy" value="<%= @expedition.difficulty %>" />
        </div>
    </div>
    <div>
        <label for="expedition_equipment">Required Equipment</label>
        <% 5.times.each do %>
            <div>
                <input name="expedition[equipment][][name]" placeholder="Equipment Name" />
            </div>
        <% end %>
    </div>
    <input type="submit" value="Create Expedition" />
</form>